<h1>New Post!</h1>

<form class="" action="<%= posts_url %>" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <label>
    Title 
    <input type="text" name="post[title]" value="">
    </label>
    <br>
    <label>
    URL 
    <input type="text" name="post[url]" value="">
    </label>
    <br>
    <label>
    Content 
    <textarea name="post[content]" rows="8" cols="80"></textarea>
    <br>
    </label>
    <% Sub.all.each do |subreddit| %>
    <label>
    <input type="checkbox" name="post[sub_ids][]" value="<%=subreddit.id%>">
    <%= subreddit.title %>
    </label>
    <br>
    <% end %>
    <input type="submit" name="" value="submit">
</form>
